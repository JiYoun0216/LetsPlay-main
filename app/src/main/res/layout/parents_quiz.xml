<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/parents_quiz"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자 확인"
        android:layout_marginTop="9dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textColor="@color/bluegreen"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:text="부모님 확인을 위해 정답을 입력해주세요"
        android:textStyle="bold"
        android:textSize="14dp"/>


    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="49dp" />

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:layout_marginStart="347dp"
        android:textSize="49dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="?"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="3.8dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/answer_button_1"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="0dp"
                android:backgroundTint="@color/pink"
                android:paddingTop="0dp"
                android:text="1"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_2"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:backgroundTint="@color/pink"
                android:paddingTop="0dp"
                android:text="2"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_3"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="3"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_4"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="4"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_5"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="5"
                android:textSize="35dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/answer_button_6"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="6"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_7"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="7"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_8"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="8"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_9"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="9"
                android:textSize="35dp"/>
            <Button
                android:id="@+id/answer_button_0"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="0"
                android:textSize="35dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

